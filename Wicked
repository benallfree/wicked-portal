<?
$config = array(
  'format'=>'1.0.0',
  'requires'=>array(
    'path_utils',
  ),
  'autoload'=>array(),
  'default_module'=>'home',
  'default_route'=>'index',
  'app_title'=>'My App',
);

W::register_filter('config', function($old_config, $module_name) {
  $config_fpath = W::$root_fpath."/config/{$module_name}.php";
  $config = array();
  @include($config_fpath);
  return array_merge($old_config, $config);
});